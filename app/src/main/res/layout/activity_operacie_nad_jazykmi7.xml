<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperacieNadJazykmi7">

    <TextView
        android:id="@+id/pocet_otazok_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otázka: 7/10"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/otazka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prázdne slovo patrí do jazyka L₁L₂ práve vtedy, keď:"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/pocet_otazok_text"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:text="patrí do každého z jazykov L₁L₂"
        android:layout_below="@id/otazka"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:text="patrí do jedného z jazykov L₁L₂"
        android:layout_below="@id/btn_1"/>

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Patrí do každého z jazykov L₁L₂. Všetko vyplýva zo vzťahu ε . w = w . ε = w. Majme napríklad L₁ = { ε, a }, L₂ = { bb, cc }, potom L₁.L₂ = { bb, cc, abb, acc }, alebo majme L₁ = { ε, a }, L₂ = { ε, bb, cc }, potom L₁.L₂ = { ε, bb, cc, a, abb, acc }."
        android:layout_below="@id/btn_2"
        android:visibility="gone"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Ďalej"
        android:layout_below="@id/explanation"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Späť"
        android:layout_below="@id/explanation"/>

</RelativeLayout>