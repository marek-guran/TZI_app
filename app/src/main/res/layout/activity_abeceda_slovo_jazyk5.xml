<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AbecedaSlovoJazyk5">

    <TextView
        android:id="@+id/pocet_otazok_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otázka: 5/10"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/otazka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Určte príklad slova dĺžky 5 patriacich do jazyka L = ab*(ca)^+."
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/pocet_otazok_text"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:text="abcac"
        android:layout_below="@id/otazka"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:text="ababc"
        android:layout_below="@id/btn_1"/>

    <Button
        android:id="@+id/btn_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:text="abbca"
        android:layout_below="@id/btn_2"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:text="cacac"
        android:layout_below="@id/btn_3"/>

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Jazyk L obsahuje túto množinu slov, L = {ab^i(ca)^i : i>=0, j>=1}. V jazyku L sú len dve slová dĺžky 5, a to {acaca, abbca}. Ľubovoľné slovo z tejto množiny je riešením."
        android:layout_below="@id/btn_4"
        android:visibility="gone"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Ďalej"
        android:layout_below="@id/explanation"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Späť"
        android:layout_below="@id/explanation"/>

</RelativeLayout>