<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".abecedaSlovoJazyk.AbecedaSlovoJazyk7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorSurfaceVariant"/>

    <ImageButton
        android:id="@+id/home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/domov"
        android:background="?attr/colorSurfaceVariant"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/pocet_otazok_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otázka: 7/10"
        android:textColor="?attr/colorSecondary"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/otazka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rozhodnite, ktoré slovo dĺžky 3 patrí do jazyka L = {a^i b^i c^i : i>0} ∪ {a^i b^j : i>j>0}."
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/pocet_otazok_text"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:text="aac"
        android:layout_below="@id/otazka"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:text="aba"
        android:layout_below="@id/btn_1"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btn_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:text="abb"
        android:layout_below="@id/btn_2"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:text="aab"
        android:layout_below="@id/btn_3"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Do jazyka L patria všetky slová z množiny {a^i b^i c^i : i>0} a všetky slová množiny {a^i b^j : i>j>0} (viď. definíciu zjednotenia množín). V množine {a^i b^i c^i : i>0} je len jedno slovo dĺžky 3 a to abc (pre i=1). V druhej množine slov {a^i b^j : i>j>0} je tiež len jedno slovo dĺžky 3 a to aab (pre i=2 > j=1 >0). Jazyk L obsahuje dve slová dĺžky 3, {abc, aab}. Ľubovoľné slovo z tejto množiny je riešením príkladu."
        android:layout_below="@id/btn_4"
        android:visibility="gone"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Ďalej"
        android:layout_below="@id/explanation"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Späť"
        android:layout_below="@id/explanation"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

</RelativeLayout>