<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kvizy.chomskehoHierarchia.ChomskehoHierarchia6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorSurfaceVariant"/>

    <ImageButton
        android:id="@+id/home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/domov"
        android:background="?attr/colorSurfaceVariant"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/pocet_otazok_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Otázka: 6/9"
        android:layout_marginTop="10dp"
        android:textColor="?attr/colorSecondary"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/otazka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Je jazyk L = {aⁿ : n > 4} bezkontextový?"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/pocet_otazok_text"/>

    <Button
        android:id="@+id/btn_true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="Áno"
        android:textSize="18sp"
        android:layout_below="@id/otazka"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/btn_false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Nie"
        android:layout_below="@id/btn_true"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="Jazyk L = {aⁿ : n > 4} je bezkontextový. Dá sa vygenerovať pomocou pravidiel bezkontextovej gramatiky. Pravidlá môžu vyzerať napríklad takto P: S → aaaaaA, A → Aa / ɛ."
        android:layout_below="@id/btn_false"
        android:visibility="gone" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="Ďalej"
        android:layout_below="@id/explanation"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Späť"
        android:layout_below="@id/explanation"
        android:textSize="18sp"
        style="@style/Widget.Material3.Button"/>

</RelativeLayout>